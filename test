#!/bin/tcsh -f

foreach frag ( `ls -1 kickc/fragment/*.asm | sed -e  's,^.*/,,g' -e 's/.asm$//g'` )
  echo $frag
  ./fraggen $frag > myfrag
  set diffs=`diff myfrag kickc/fragment/${frag}.asm | wc -l`
  echo "diff: ${diffs}"
  if ( $diffs != 0 ) then
    echo "Differs"
    diff myfrag kickc/fragment/${frag}.asm
  else
    echo "Matches"
  endif
end
